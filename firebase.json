{
  "database": {
    "rules": "json"
  },
  "firestore": {
    "rules": ".jsx",
    "indexes": "json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9009
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
